{
  "compilerOptions": {
    "jsx": "react-jsxdev",
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "./.declaration.d.ts"],
  "exclude": ["node_modules", "build", "dist"]
}
